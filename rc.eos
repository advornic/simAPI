#!/bin/bash

sudo cp /mnt/flash/SimApi.py /usr/lib/python2.7/site-packages/SimApi.py

sudo mkdir -p /etc/nginx/external_conf
sudo cp /mnt/flash/simApi.conf /etc/nginx/external_conf/simApi.conf
sudo service nginx restart

sudo cp /mnt/flash/simApi.ini /etc/uwsgi/simApi.ini
sudo chmod 777 /etc/uwsgi/simApi.ini
sudo /usr/bin/uwsgi  --ini /etc/uwsgi/simApi.ini